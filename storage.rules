rules_version = '2';

// Reglas de seguridad para Firebase Storage
service firebase.storage {
  match /b/{bucket}/o {

    // Fotos de perfil de usuarios - Solo el dueño puede modificar su propia foto
    match /profile-photos/{userId}/{fileName} {
      // Cualquier usuario autenticado puede ver fotos de perfil
      allow read: if request.auth != null;

      // Solo el dueño puede subir/modificar su propia foto
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Logos de branding - Solo el dueño puede modificar
    match /branding-logos/{userId}/{fileName} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Documentos de pago - Solo el dueño puede acceder
    match /payment-documents/{userId}/{fileName} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Adjuntos de cotizaciones - Solo el dueño puede acceder
    match /attachments/{userId}/{quoteId}/{fileName} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Regla por defecto: Denegar acceso a rutas no especificadas
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
