
// Reglas para Firestore
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Regla para la colección de usuarios, donde cada usuario solo puede leer y escribir en su propio documento
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Regla para la colección de datos de contacto
    match /DatosContacto/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Información de pago - Solo el dueño puede leer/escribir
    match /paymentInfo/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Datos de facturación - Solo el dueño puede leer/escribir
    match /billing/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Información de branding - Solo el dueño puede leer/escribir
    match /brandingInfo/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Servicios - Solo el dueño puede leer/escribir sus servicios
    match /servicios/{docId} {
      allow read, write: if request.auth != null && request.auth.uid == resource.data.userId;
      allow create: if request.auth != null;
    }

    // Plantillas de términos legales - Solo el dueño puede leer/escribir
    match /terms_templates/{docId} {
      allow read, write: if request.auth != null && request.auth.uid == resource.data.userId;
      allow create: if request.auth != null;
    }
  }
}

// Reglas para Firebase Storage
service firebase.storage {
  match /b/{bucket}/o {

    // Regla para permitir a los usuarios autenticados subir y leer solo sus propias fotos en 'photoURL'
    match /users/{userId}/photoURL {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Regla para fotos de perfil
    match /profile-photos/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

  }
}
